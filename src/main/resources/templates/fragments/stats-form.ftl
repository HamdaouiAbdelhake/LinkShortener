<!-- Page heading-->
<h1 class="mb-5">
    <img src="/assets/favicon.ico" alt="URL Icon"
         style="height: 1em; margin-right: 0.3em; vertical-align: middle;">
    Check The Stats Of a Shortened Link
</h1>
<form action="/get/stats" method="POST" class="form-subscribe" id="contactForm">
    <!-- Email address input-->
    <div class="row">
        <div class="col">
            <input class="form-control form-control-lg" id="code" name="code"
                   placeholder="Enter a Short Code" />
        </div>
        <div class="col-auto"><button class="btn btn-primary btn-lg" id="submitButton"
                                      type="submit">Check</button></div>
    </div>
</form>